# Example .env file for this project (do not include actual keys)
# Copy this file to .env.local, .env.development, or .env.production and fill in your values

# Helius API configuration for Solana RPC and API access
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key_here
NEXT_PUBLIC_HELIUS_RPC_URL=https://rpc.helius.xyz/?api-key=${NEXT_PUBLIC_HELIUS_API_KEY}
NEXT_PUBLIC_HELIUS_API_URL=https://api.helius.xyz/v0

# CoinGecko API configuration
NEXT_PUBLIC_COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Solana network configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet

# Optional: If you want to specify a custom endpoint for different Solana networks
NEXT_PUBLIC_SOLANA_DEVNET_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_TESTNET_URL=https://api.testnet.solana.com
NEXT_PUBLIC_SOLANA_MAINNET_URL=https://api.mainnet-beta.solana.com
